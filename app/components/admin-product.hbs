<div class="card">
    <img class="card-img-top img-fluid" src={{@source}} alt="product image">
    <div class="card-body">
       <LinkTo class="category_linkto" @route={{@route}} @model={{@model}}>
            <h6 class="card-title ">{{@title}}</h6>
        </LinkTo>
        <p class="card-text d-inline-block text-truncate productdesc" >{{@desc}}</p>
        <h5  class="card-text">{{currencysign @price }}</h5>
    </div>    
</div>
{{!--  price é definido a partir dos modelos enquanto os produtos são renderizados. --}}